{{#link "measures/{{_id}}/patients/new" class="btn btn-primary" expand-tokens=true}}Add Patient{{/link}}
<h3>Select Patients</h3>
<div data-toggle="buttons-checkbox">
  {{#collection patients}}
    <button style="width: 180px; margin: 5px 5px 0px 0px;" class="btn btn-primary toggle-patient">{{last}}, {{first}}</button>
  {{/collection}}
</div>
<br>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <td>Totals:</td>
    <td>{{IPPTotal}}</td>
    <td>{{DENOMTotal}}</td>
    <td>{{NUMERTotal}}</td>
    <td>{{DENEXTotal}}</td>
    <td>{{DENEXCEPTotal}}</td>
  </tr>
  <tr>
    <td>Results Percentages:</td>
    <td>{{IPPPercent}}%</td>
    <td>{{DENOMPercent}}%</td>
    <td>{{NUMERPercent}}%</td>
    <td>{{DENEXPercent}}%</td>
    <td>{{DENEXCEPPercent}}%</td>
  </tr>
  <tr>
    <th>Patient Name</th>
    <th>Population</th>
    <th>Denominator</th>
    <th>Numerator</th>
    <th>Exclusions</th>
    <th>Exceptions</th>
  </th>
  {{#collection results tag="tbody"}}
    <tr>
      <td>{{#link "patients/{{patient_id}}" expand-tokens=true}}{{last}}, {{first}}{{/link}}  {{#button "deletePatient" class="btn btn-danger delete-{{patient_id}}" style="display: none;" expand-tokens=true}}Delete{{/button}}</td>
      <td class="ipp-{{patient_id}}">{{#if IPP}}X{{/if}}</td>
      <td class="denom-{{patient_id}}">{{#if DENOM}}X{{/if}}</td>
      <td class="numer-{{patient_id}}">{{#if NUMER}}X{{/if}}</td>
      <td class="denex-{{patient_id}}">{{#if DENEX}}X{{/if}}</td>
      <td class="denexcep-{{patient_id}}">{{#if DENEXCEP}}X{{/if}}</td>
      <td width="4%">{{#button "showDelete" class="btn btn-default"}}<i class="glyphicon glyphicon-minus-sign"></i>{{/button}}</td>
    </tr>
  {{/collection}}
</table>
