  <div class="input-group">
    {{#if fieldValue}}
      <div class="field-value">
        <select name="id" class="form-control">
          <option value="">--</option>
          {{#each fields}}
            <option value="{{@key}}">{{title}}</option>
          {{/each}}
        </select>
      </div>
      {{!-- <select name="id" class="form-control">
        <option value="">--</option>
        {{#each fields}}
          <option value="{{@key}}">{{title}}</option>
        {{/each}}
      </select> --}}
      <div class="input-group-btn">
        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">Type <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a class="scalar-field-value"><i class="fa fa-pencil-square-o"></i> Scalar</a></li>
          <li><a class="coded-field-value"><i class="fa fa-list"></i> Coded</a></li>
          <li><a class="time-field-value"><i class="fa fa-calendar"></i> Time</a></li>
        </ul>
      </div>
    {{else}}
      <div class="input-group-btn">
        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">Type <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a class="scalar-value"><i class="fa fa-pencil-square-o"></i> Scalar</a></li>
          <li><a class="coded-value"><i class="fa fa-list"></i> Coded</a></li>
        </ul>
      </div>
    {{/if}}
    
    {{#if typePQ}}
      <div class="inputs row">
       <span class="form-control-input"><input type="text" class="form-control" id="event-start" placeholder="input"></span>
        <span class="form-control-units"><input type="text" class="form-control" id="event-start-time" placeholder="units"></span>
      </div>
    {{!--     <div class="row">
          <div class="value-input">
            <input type="text" name="value" class="form-control form-control-input" placeholder="scalar">
          </div>
          <div class="value-input">
            <input type="text" name="unit" class="form-control form-control-units" placeholder="unit">
          </div>
        </div> --}}
    {{/if}}

    {{#if typeCD}}
      <div class="inputs inputs-cd">
        <select name="code_list_id" class="form-control">
          <option value="">--</option>
          {{#each codes tag="select" name="code_list_id"}}
            <option value="{{oid}}">{{display_name}}</option>
          {{/each}}
        </select>
      </div>
    {{/if}}

    {{#if typeTS}}
      <div class="inputs row">
        <input type="text" name="start_date" class="form-control form-control-date" placeholder="xx/xx/xxxx">
        <input type="text" name="start_time" class="form-control form-control-time" placeholder="xx:xx">
      </div>
    {{/if}}

    {{#if fieldValue}}
      {{#button "addFieldValue" class="btn btn-primary pull-right"}}<i class="fa fa-plus"></i>{{/button}}
    {{else}}
      {{#button "addValue" class="btn btn-primary pull-right"}}<i class="fa fa-plus"></i>{{/button}}
    {{/if}}
  </div><!-- /input-group -->
</div>