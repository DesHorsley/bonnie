<div class="value-form">
  <div class="pull-right">
    {{#button "removeValue" tag="a" class="close"}}&times;{{/button}}
  </div>

  {{#if typePQ}}
    <label>Value</label>
  {{/if}}

  {{#if typeCD}}
    <label>Coded</label>
  {{/if}}

  {{#if typeTS}}
    <label>Time</label>
  {{/if}}

  {{#if fieldValue}}
    <select name="id" class="form-control">
      <option value="">--</option>
      {{#each fields}}
        <option value="{{@key}}">{{title}}</option>
      {{/each}}
    </select>
  {{/if}}

  {{#if typePQ}}
    <div class="row">
      <div class="value-input">
        <input type="text" name="value" class="form-control form-control-input" placeholder="scalar">
      </div>
      <div class="value-input">
        <input type="text" name="unit" class="form-control form-control-units" placeholder="unit">
      </div>
    </div>
  {{/if}}

  {{#if typeCD}}
    <select name="code_list_id" class="form-control">
      <option value="">--</option>
      {{#each codes tag="select" name="code_list_id"}}
        <option value="{{oid}}">{{display_name}}</option>
      {{/each}}
    </select>
  {{/if}}

  {{#if typeTS}}
    <input type="text" name="value" class="form-control" placeholder="xx/xx/xxxx xx:xx">
  {{/if}}
</div>