<div class="record-listing">
  <div class="circle-icon active-icon">
    <i class="fa {{faIcon}}"></i>
  </div>
  <div class="patient-data">
    <div class="pull-right">
      {{#button "removeCriteria" class="close"}}&times;{{/button}}
    </div>
    <dl class="dl-record">
      <dt class="definition">{{definition}}</dt>
      <dd>{{#button "toggleDetails" tag="a"}}{{title}}{{/button}}</dd>
    </dl>
    <dl class="dl-date">
      <dt>DATE</dt>
      <dd>{{start_date}} {{end_date}}</dd>
    </dl>
    <div class="details" style="display: none;">
      <div class="form-group">
        <label>Event Start</label>
        <input type="text" name="start_date" class="form-control" placeholder="xx/xx/xxxx xx:xx">
      </div>
      <div class="form-group">
        <label>Event End</label>
        <input name="end_date" type="text" class="form-control" placeholder="xx/xx/xxxx xx:xx">
      </div>
      <div class="form-group">
        <label>Null</label>
        <input type="checkbox">
      </div>
      <div>
        <label>Values</label>
        {{view editValueCollectionView}}
        {{#button "newScalarValue" class="btn btn-default"}}New Scalar Value{{/button}}
        {{#button "newCodedValue" class="btn btn-default"}}New Coded Value{{/button}}
      </div>
      <div>
        <label>Field Values</label>
        {{view editFieldValueCollectionView}}
        {{#button "newScalarFieldValue" class="btn btn-default"}}New Scalar Field Value{{/button}}
        {{#button "newCodedFieldValue" class="btn btn-default"}}New Coded Field Value{{/button}}
        {{#button "newTimeFieldValue" class="btn btn-default"}}New Time Field Value{{/button}}
      </div>
    </div>
  </div>
</div>
